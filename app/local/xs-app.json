{
    "welcomeFile": "/ui/index.html",
    "authenticationMethod": "none",
    "sessionTimeout": 1440,
    "routes": [
        {
            "source": "^/user-api(.*)$",
            "target": "$1.json",
            "localDir": "./user-api",
            "cacheControl": "max-age=0, must-revalidate",
            "authenticationType": "none"
        },
        {
            "source": "^/srv/(.*)$",
            "target": "/$1",
            "destination": "srv-api",
            "csrfProtection": false
        },
        {
            "source": "^/src/(.*)$",
            "target": "$1",
            "localDir": "../ui/src",
            "cacheControl": "max-age=0, must-revalidate"
        },
        {
            "source": "^/ui/(.*)$",
            "target": "$1",
            "localDir": "../ui/dist",
            "cacheControl": "max-age=0, must-revalidate",
            "authenticationType": "none"
        }
    ]
}